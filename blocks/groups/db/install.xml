<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/groups/db" VERSION="20110208" COMMENT="XMLDB file for Moodle blocks/groups - table name" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd" >
<TABLES>
    <TABLE NAME="block_groups_grouping_info" COMMENT="Info about groupings created with this tool">
        <FIELDS>
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" COMMENT="Primary key" NEXT="groupingid" />
            <FIELD NAME="groupingid"    TYPE="int"  LENGTH="10"     NOTNULL="true" UNSIGNED="true" SEQUENCE="false"  ENUM="false" COMMENT="Id of the grouping" PREVIOUS="id"  NEXT="authorid" />
            <FIELD NAME="authorid"      TYPE="int"  LENGTH="10"     NOTNULL="true" UNSIGNED="true" SEQUENCE="false"  ENUM="false" COMMENT="Id of the author"        PREVIOUS="groupingid" NEXT="inheritgroupingname" />
            <FIELD NAME="inheritgroupingname" TYPE="int" LENGTH="2" NOTNULL="true" UNSIGNED="true" SEQUENCE="false"  ENUM="false" COMMENT="Inherit grouping name for groups names" PREVIOUS="authorid" NEXT="includeme" />
            <FIELD NAME="includeme" TYPE="int" LENGTH="2" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" COMMENT="include author in groups"  PREVIOUS="inheritgroupingname" NEXT="commonteam" />
            <FIELD NAME="commonteam"   TYPE="char" LENGTH="250" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" ENUM="false" COMMENT="team common" PREVIOUS="includeme" NEXT="contextid" />
            <FIELD NAME="contextid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="commonteam" />
        </FIELDS>
        <KEYS>
            <KEY NAME="id" TYPE="primary" FIELDS="id" NEXT="groupingid" />
            <KEY NAME="groupingid" TYPE="unique" FIELDS="groupingid" PREVIOUS="id" />
        </KEYS>
    </TABLE>
</TABLES>
</XMLDB>
